#include <iostream>
#include <math.h>
#include <cstdlib> 
#include <termios.h>
#include <unistd.h>
#include <unistd.h>
#include <stdio.h>
using namespace std;

#define N 20
#define M 45
#define L 8
#define P 5
#define Q 45
#define NBRE_GOUTTE 1

bool touche_appuyee();

char screen[N][M];

void paysage();
void affiche_screen();
void affiche_print();

typedef struct {
  double x;
  double y;
  double dx;
  double dy;
} Sprite;

/*typedef struct {
  double x1;
  double x2;
  } Block;*/


void init_sprite(Sprite & s, double x, double y, double dx, double dy);
void mise_a_jour_sprite(Sprite & s, Sprite u[]);

/*void init_block(Block b[][], double x1, double y1);*/

int main () {
  Sprite goutte[NBRE_GOUTTE];
  init_sprite(goutte[0], 5, 5, 0.5, 0.5);
 
  Sprite gallet[L];
  for (int l=0; l<L; l++)
    {
      gallet[0].y = 6;
      gallet[l+1].y = gallet[l].y +1;
      init_sprite(gallet[l], 16, gallet[l].y, 0, 0);
    }
     
  Sprite brique1[Q];
  for (int i=0; i<Q; i++)
    {
      brique1[0].y = 2;
      brique1[i+1].y = brique1[i].y +1;
      init_sprite(brique1[i], 2, brique1[i].y, 0, 0);
    }


  /*  brique[P][Q];
  for (int i=0; i<P; i++)
    for (int j=0; j<Q; j++)
    init_block(brique[i][j], 1, 1);*/


  for (int t=0; t<1000; t++) 
    {
      system ("stty raw");
    usleep(40 * 1000);
    if (touche_appuyee()) {
      char c = getchar();     
      system ("stty cooked");
      switch (c) {
      case 'a':
        goutte[0].dx = 0.3;
        break;
      case 'b':
        goutte[0].dx = -0.3;
        break;
      case 'f':
	for(int k=L-1;k>=0;k--)	  
	  gallet[k].y -=1;		
	break;
      case 'g':
	for(int k=0;k<L;k++)	
	  gallet[k].y +=1;            
	break;
      case 13:
	system ("stty cooked");
	exit(0);
      }              
    } 
    system ("stty cooked"); 
    
    
    paysage();
    screen[(int) goutte[0].x][(int) goutte[0].y] = 'O';
    for (int g=0; g<L; g++)
      screen[(int) gallet[g].x][(int) gallet[g].y] = '=';

    /* for (int i=0; i<P; i++)
      for (int j=0; j<Q; j++)
      screen[(int) brique[i].x][(int) brique[j].y] = '#';*/    

    for (int g=0; g<Q; g++)
      {
	if (g==6 || g==13 || g==20 || g==27 || g==34 || g==41)
	  screen[(int) brique1[g].x][(int) brique1[g].y] = ' ';
	else if (g<Q-4)
	  screen[(int) brique1[g].x][(int) brique1[g].y] = 'L';
      }

    affiche_screen();
    mise_a_jour_sprite (goutte[0], gallet);
    
    if ((int) goutte[0].x == 15)
      for (int k=0; k<L; k++)
	if((int)goutte[0].y == (int)gallet[k].y) goutte[0].dx = -0.6;

    if ((int) goutte[0].x >= N-2)
      {
	cout << "------------BLEU BLEU TU AS PERDU------------" << endl;
	exit(0);
      }

  }
}

void init_sprite(Sprite & s,
                 double x, 
                 double y, 
                 double dx, 
                 double dy) {
  s.x = x;
  s.y = y;
  s.dx = dx;
  s.dy = dy;
}

/*void init_block(Block b[], double x1, double y1) {

  for (int i=0; i<P; i++)
      {
	b[i].x1=x;
	b[i].y1=y;
      }
}*/

void init_sprite(Sprite u[],
		 double x,
		 double y,
		 double dx,
		 double dy) {
  for(int r=0; r<L-1; r++)
    {
      u[r].x=x;
      u[r].y=y;
      u[r].dx=dx;
      u[r].dy=dy;
    }
}


void mise_a_jour_sprite(Sprite & s, Sprite u[]) {
  
  s.x += s.dx;
  s.y += s.dy;
  
  if (s.x < 2) s.dx = 0.8;
  /* if (s.x > N-2) s.dx = -0.8;*/
  if (s.y < 3) s.dy = 1.4;
  if (s.y > M-2) s.dy = -1.4;
  
  for( int r=L-1; r>=0; r--)    
    if(u[0].y < 2) u[r].y +=1;
      
  for( int r=0; r<L; r++)
    if(u[L-1].y > M-3) u[r].y -=1;
  
  
}

void paysage() {
  for (int i=0; i<N; i++)
    for (int j=0; j<M; j++)
      if (i==0 || i==N-1 || j==0 || j==M-1)
        screen[i][j] = '*';
      else
        screen[i][j] = ' ';
}

void affiche_screen() {
  system("clear");
  for (int i=0; i<N; i++) {
    for (int j=0; j<M; j++)
      cout << screen[i][j];
    cout << endl;
  }
}

/*void affiche_print() {
  system("clear");
  for (int i=0; i<Q; i++) {
    for (int j=0; j<P; j++)
      cout << print[i][j];
    cout << endl;
  }
  }*/


bool touche_appuyee()  
{
  struct timeval tv;
  fd_set fds;
  tv.tv_sec = 0;
  tv.tv_usec = 0;
  FD_ZERO(&fds);
  FD_SET(STDIN_FILENO, &fds);
  select(STDIN_FILENO+1, &fds, NULL, NULL, &tv);
  return (FD_ISSET(0, &fds));
}

